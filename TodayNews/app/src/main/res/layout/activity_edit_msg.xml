<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:background="@color/fm_wd">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@mipmap/back_white"
            android:id="@+id/edit_msg_img_back"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/edit_msg_img_pic"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFF"
                android:layout_marginLeft="20dp"
                android:id="@+id/edit_msg_tx_name"
                android:layout_gravity="center_vertical"/>
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="编辑资料"
                android:layout_marginLeft="150dp"
                android:id="@+id/edit_msg_bt_edit"
                android:textColor="#FFF"
                android:background="@drawable/edit_msg_bt_shape"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/edit_msg_tx_describe"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/edit_msg_list_view">
    </ListView>

</LinearLayout>