<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/title_color"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:src="@mipmap/jinritoutiao"
            android:layout_gravity="center"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/find_et_shape"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:id="@+id/main_fm_sy_find_layout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/find_img_gray"
                android:layout_gravity="center"
                android:padding="10dp" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:hint="000000"
                android:textColorHint="@color/hint_color"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/view_color">
        <android.support.design.widget.TabLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/main_fm_sy_tab_layout">
        </android.support.design.widget.TabLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/jia"
            android:padding="10dp"
            android:id="@+id/main_fm_sy_img_jia"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/main_fm_sy_view_pager">
    </android.support.v4.view.ViewPager>

</LinearLayout>